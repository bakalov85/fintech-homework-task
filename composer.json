{
    "name": "fintech/commission-task-skeleton",
    "description": "Skeleton for Fintech recruitment task",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "Fintech\\CommissionTask\\": ["src", "app"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fintech\\CommissionTask\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-bcmath": "*",
        "ext-intl": "*"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": ["@phpunit", "@test-cs"]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "^3.12"
    }
}
